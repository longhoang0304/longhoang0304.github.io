---
import Layout from "@layouts/Layout.astro";
---

<Layout>
  <div id="e404">
    <div id="e404-code">404</div>
    <div id="e404-msg">
      <div>¯\_(ツ)_/¯</div>
      <div>Oops! Don"t be lost!</div>
      <div>There is nothing here</div>
    </div>
    <div id="e404-back"><a href="/">Go back home</a></div>
  </div>
</Layout>

<style>
  #e404 {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  #e404-code {
    color: rgb(0, 108, 172);
    font-weight: bold;
    font-size: 10rem;
  }
  
  #e404-msg {
    margin-top: 1rem;
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  #e404-back a {
    color: rgb(0, 108, 172);
    text-underline-offset: 5px;
    text-decoration: none;
    font-size: 1.5rem;
  }

  #e404-back a:hover {
    text-decoration: underline;
  }
</style>
