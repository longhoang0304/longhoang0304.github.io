---
import PostList from "@components/PostList.astro";
import HeaderMobile from "@components/HeaderMobile.astro";
import FooterMobile from "@components/FooterMobile.astro";
import Layout from "@layouts/Layout.astro";
import Navigation from "@components/Navigation.astro";
import type { MainPage } from "@types";

export interface Props extends MainPage {}

const { posts, currentPage, maxPage } = Astro.props;

---
<Layout>
  <div id="main-mobile">
    <HeaderMobile />
    <div id="entries-wrapper">
      <PostList posts={posts} />
      <Navigation currentPage={currentPage} maxPage={maxPage} />
    </div>
    <FooterMobile />
  </div>
</Layout>

<style>
  #main-mobile {
    max-width: 48rem;
    background: white;
    margin-left: auto;
    margin-right: auto;
    padding: 1rem;
  }
  
  @media (min-width: 1024px) {
    #main-mobile {
      display: none;
    }
  }

  #entries-wrapper {
		padding-top: 1.25rem;
    padding-bottom: 1.25rem;
		display: flex;
		flex-direction: column;
		width: 100%;
	}
</style>
