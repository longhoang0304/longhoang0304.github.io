---
import type { Entries } from '../types';
import Entry from './Entry.astro';

export interface Props {
	entries: Entries;
}

const { entries } = Astro.props;
---

<div id="entries-wrapper">
	<div id="entries">
		{entries.map(entry => <Entry {...entry} />)}
	</div>
	<div id="entries-nav">
		<span id="entries-nav-prev">&lt; Prev</span>
		<span id="entries-nav-next">Next &gt;</span>
	</div>
</div>
<style is:global>
	#entries {
    text-align: left;
		display: flex;
		flex-direction: column;
		width: 100%;
		height: 100%;
		overflow: auto;
	}

	#entries-wrapper {
		padding: 1.25rem;
		display: flex;
		flex-direction: column;
		width: 100%;
	}

	#entries-nav {
		margin-top: auto;
		/* text-align: center; */
	}

	#entries-nav::before {
    text-align: left;
    content: " ";
    display: block;
    width: 8.8rem;
    height: 3px;
    background: #666;
		/* margin-top: 2px; */
    margin-bottom: 1rem;
	}

	#entries-nav #entries-nav-prev {
		margin-right: 1rem;

	}

	#entries-nav-prev:hover, #entries-nav-next:hover {
		cursor: pointer;
		text-decoration: underline;
		text-underline-offset: 5px;
	}
</style>
