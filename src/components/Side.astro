---
import { LINKS } from '@utils/links';
import SideLink from './SideLink.astro';
import SearchBar from './SearchBar.astro';

export interface Props {}

---

<aside id="side">
  <div id="side-top">
    <div id="side-info-block">
      <div id="info-block-avatar-block">
        <img id="info-block-avatar" src="avatar.webp" />
        <div id="info-block-theme-toggle">
          <i class="ti ti-moon-filled"></i>
        </div>
      </div>
      
      <div id="info-block-name">
        <span>Long Hoang</span>
      </div>
      <div id="info-block-desc">
        Very curious. Don't talk much. Love teas, plants & cats. Learning cloud, security and French. Reversing everything
      </div>
    </div>

    <div id="side-link-block" class="side-sep">
      {LINKS.map(link => <SideLink {...link}/>)}
    </div>

    <div id="side-fn" class="side-sep">
      <SearchBar />
    </div>
  </div>

  <div id="side-copyright">
    <span>Â© 2023 Long Hoang</span>
    <!-- <SideLink {...links[4]}/> -->
    <!-- <i class="ti ti-heart-filled"></i> -->
  </div>
</aside>
<style is:global>
  #side {
    background: #f5f6fa;
    justify-items: stretch;
    width: 360px;
    text-align: right;
    padding: 1.25rem;
    flex-direction: column;
    display: flex;
  }
  
  #info-block-avatar-block {
    position: relative;
  }
  #info-block-theme-toggle {
    color: yellow;
    position: absolute;
    top: 5px;
    right: 10px;
    font-size: 1.5rem;
    border-radius: 50%;
    border: 2px solid #333;
    background: #333;
    box-sizing: content-box;
    width: 2rem;
    height: 2rem;
  }

  #info-block-theme-toggle:hover {
    cursor: pointer;
  }

  #info-block-theme-toggle i {
    position: absolute;
    top: 4px;
    right: -6px;
  }

  #info-block-avatar {
    border-radius: 50%;
    width: 10rem;
    margin-bottom: 0.5rem;
  }

  #info-block-name {
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }

  #info-block-desc {
    color: #888;
  }

  #side-fn {
    width: 100%;
  }

  .side-sep {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .side-sep::before {
    text-align: right;
    content: " ";
    display: block;
    width: 5rem;
    height: 3px;
    background: #666;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  #side-copyright {
    color: #888;
    margin-top: auto;
    text-align: right;
  }

</style>
