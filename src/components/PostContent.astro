---
import type { AstroComponentFactory } from "astro/dist/runtime/server";
import type { Post } from "../types";
import PostTag from "./PostTag.astro";

export interface Props {
	post: Required<Post>;
}

const { post } = Astro.props;
const { Content } : { Content: AstroComponentFactory } = await post.originalPost.render()

const tags = post.tags.slice(0, -1)
const lastTag = post.tags.at(-1)
---

<main id="post-wrapper">
	<section id="post-header">
		<nav>
			<a href="#" onclick="history.back()">&lt; Back</a>
			<span>|</span>
			<a href="#" onclick="history.back()">Home</a>
		</nav>
		<h1>{post.title}</h1>
		<time>
			<i class="ti ti-calendar"></i>
			<i>{post.date.format("dddd, DD MMM YYYY - HH:mm A")}</i>
		</time>
	</section>
	<article id="post-content">
		<Content />
	</article>
	<section id="post-tags">
		<span><b>Tags:</b></span>
		{tags.map(tag => <PostTag tag={tag}/>)}
		{lastTag && <PostTag tag={lastTag} />}
	</section>
</main>

<style is:global>
	#post-wrapper {
    text-align: left;
		display: flex;
		flex-direction: column;
		width: 100%;
		height: 100%;
		overflow-y: auto;
		overflow-x: hidden;
	}

	#post-header {
		margin-top: 1.8rem;
	}

	#post-header time {
		display: flex;
	}

	#post-header h1 {
		color: rgb(0, 108, 172);
		margin-bottom: 0.5rem;
		margin-top: 0.5rem;
	}

	#post-header a {
		display: inline-block;
	}

	#post-content p:first-child {
		margin-top: unset;
	}

	#post-content p:last-child {
		margin-bottom: unset;
	}

	#post-content {
		margin-top: 1.8rem;
		margin-bottom: 1.8rem;
	}

	#post-tags {
		margin-bottom: 1.8rem;
		display: flex;
	}

</style>
